<script type="text/javascript" src="/javascripts/wymeditor/jquery.wymeditor.min.js"></script>

<script type="text/javascript">
  $(function() {
      var ids = [<%= ids.map{|id| "'#{id}'"}.join(', ') %>]
      
      $('textarea').filter(function() {
          for (var i = 0; i < ids.length; i++) {
              if(this.name.match('^'+ids[i])) return true;
          }
          return false;
      }).each(function() {
          $(this).wymeditor({ lang: '<%= I18n.locale.to_s.downcase %>', skin: 'compact' });
      });
  });
</script>
